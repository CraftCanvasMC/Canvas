diff --git a/src/main/java/net/minecraft/world/entity/PathfinderMob.java b/src/main/java/net/minecraft/world/entity/PathfinderMob.java
index ec9e76c548393235dcc6658c29e72e07e5d3510b..41fe45205cdca8323cee673fd9849c25acf3dd68 100644
--- a/src/main/java/net/minecraft/world/entity/PathfinderMob.java
+++ b/src/main/java/net/minecraft/world/entity/PathfinderMob.java
@@ -88,4 +88,11 @@ public abstract class PathfinderMob extends Mob {
     protected double followLeashSpeed() {
         return 1.0D;
     }
+    // Canvas start
+
+    public boolean canTickRandomStroll() {
+        java.util.List<Entity> entityList = this.level().getEntities(this, this.getBoundingBox(), entity -> !entity.isRemoved() && entity != this);
+        return entityList.isEmpty() || entityList.toArray().length < me.dueris.canvas.CanvasConfig.maxEntitiesToReducePathfindingRates;
+    }
+    // Canvas end
 }
