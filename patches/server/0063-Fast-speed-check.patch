diff --git a/src/main/java/net/minecraft/world/entity/Entity.java b/src/main/java/net/minecraft/world/entity/Entity.java
index 7ca3ff0c81b58fe12b57c8718b6366f9bd52cf60..edafb171e1686b3949a58f064e3988c7c9fb1628 100644
--- a/src/main/java/net/minecraft/world/entity/Entity.java
+++ b/src/main/java/net/minecraft/world/entity/Entity.java
@@ -1271,7 +1271,18 @@ public abstract class Entity implements Nameable, EntityAccess, CommandSource {
                 }
 
                 this.tryCheckInsideBlocks();
-                float f = this.getBlockSpeedFactor();
+                // NFT-Worlds start
+                float f;
+                if (dev.etil.mirai.MiraiConfig.fastSpeedCheck) {
+                    if (this.getDeltaMovement().x == 0 && this.getDeltaMovement().z == 0) {
+                        f = 1;
+                    } else {
+                        f = this.getBlockSpeedFactor();
+                    }
+                } else {
+                    f = this.getBlockSpeedFactor();
+                }
+                // NFT-Worlds stop
 
                 this.setDeltaMovement(this.getDeltaMovement().multiply((double) f, 1.0D, (double) f));
