+    }
+
+    public enum LogLevel {
+        INFO, WARNING, ERROR
+    }
+
+    public void info(String message) {
+        if (logLevel.ordinal() <= LogLevel.INFO.ordinal()) {
+            logC(ANSI_BLUE, "INFO", message);
+        }
+    }
+
+    private void logC(String color, String level, String message) {
