+        int chunkX = this.getX();
+        int chunkZ = this.getZ();
+
+        Block[] blocks = new Block[16 * 256 * 16];
+        int index = 0;
+
+        for (int x = 0; x < 16; x++) {
+            for (int y = 0; y < 256; y++) {
+                for (int z = 0; z < 16; z++) {
+                    Location blockLocation = new Location(world, chunkX * 16 + x, y, chunkZ * 16 + z);
+                    Block block = blockLocation.getBlock();
+                    blocks[index++] = block;
+                }
+            }
+        }
