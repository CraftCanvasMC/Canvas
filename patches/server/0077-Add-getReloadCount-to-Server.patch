Subject: [PATCH] Add getReloadCount() to Server


diff --git a/src/main/java/org/bukkit/craftbukkit/CraftServer.java b/src/main/java/org/bukkit/craftbukkit/CraftServer.java
index b1986e612f4a6306ecd56903bf71a08eba68b9af..3f6c5ccbbbab1c633ba0f8cce8948a6ad5fe552a 100644
--- a/src/main/java/org/bukkit/craftbukkit/CraftServer.java
+++ b/src/main/java/org/bukkit/craftbukkit/CraftServer.java
@@ -1309,6 +1309,13 @@ public final class CraftServer implements Server {
 
         return false;
     }
+    // Canvas start
+
+    @Override
+    public int getReloadCount(){
+        return this.reloadCount;
+    }
+    // Canvas end
 
     @Override
     public void reload() {
@@ -1404,6 +1411,7 @@ public final class CraftServer implements Server {
         }
         io.papermc.paper.plugin.PluginInitializerManager.reload(this.console); // Paper
         me.dueris.canvas.plugin.CanvasPluginLoader.loader(); // Canvas - reload cache mappings
+        
         this.loadPlugins();
         this.enablePlugins(PluginLoadOrder.STARTUP);
         this.enablePlugins(PluginLoadOrder.POSTWORLD);
