+            case LIME:
+                return "lime";
+            case MAGENTA:
+                return "magenta";
+            case ORANGE:
+                return "orange";
+            case PINK:
+                return "pink";
+            case PURPLE:
+                return "purple";
+            case RED:
+                return "red";
+            case WHITE:
+                return "white";
+            case YELLOW:
+                return "yellow";
+            default:
+                throw new IllegalArgumentException("Unknown DyeColor for " + this.toString());
+        }
+    }
+    // Canvas end
 
