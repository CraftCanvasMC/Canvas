diff --git a/build.gradle.kts b/build.gradle.kts
index 83b02a1a2583f3bc5d9044f02d522e2050392044..6a216a9b7cc7983b5d813447e360492624dceb3e 100644
--- a/build.gradle.kts
+++ b/build.gradle.kts
@@ -92,9 +92,9 @@ sourceSets {
 // Paper end
 
 configure<PublishingExtension> {
-    publications.create<MavenPublication>("maven") {
-        from(components["java"])
-    }
+    // publications.create<MavenPublication>("maven") {
+    //     from(components["java"])
+    // }
 }
 
 val generateApiVersioningFile by tasks.registering {
@@ -198,5 +198,41 @@ val scanJarForOldGeneratedCode = tasks.register("scanJarForOldGeneratedCode", io
 tasks.check {
     dependsOn(scanJarForOldGeneratedCode)
 }
-// Paper end
-tasks.getByName("jar").dependsOn("sourcesJar") // Canvas
+// Paper end -/- Canvas start
+tasks.getByName("jar").dependsOn("sourcesJar")
+
+publishing {
+    publications {
+        create<MavenPublication>("mavenJava") {
+            pom {
+                name.set("Canvas-API")
+                description.set("Empowering the impossible in Minecraft")
+                url.set("https://github.me/dueris/Canvas")
+                licenses {
+                    license {
+                        name.set("GNU General Public License 3.0")
+                        url.set("https://www.gnu.org/licenses/gpl-3.0.en.html")
+                    }
+                }
+            }
+            groupId = "io.github.dueris"
+            artifactId = "canvas-api"
+            from(components["java"])
+        }
+    }
+    repositories {
+        maven {
+            name = "sonatype"
+            if (version.toString().endsWith("SNAPSHOT")) {
+                url = uri("https://s01.oss.sonatype.org/content/repositories/snapshots/")
+            } else {
+                url = uri("https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/")
+            }
+            credentials {
+                username=System.getenv("OSSRH_USERNAME")
+                password=System.getenv("OSSRH_PASSWORD")
+            }
+        }
+    }
+}
+// Canvas end
