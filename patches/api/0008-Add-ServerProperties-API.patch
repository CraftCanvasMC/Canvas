+package me.dueris.canvas.properties;
+
+import java.util.*;
+import java.io.*;
+
+public interface ServerProperties {
+    public ArrayList<String> getPropertyKeys();
+
+    public HashMap<String, Object> getPropertyMappings();
+
+    public File getFile();
+
+    public Properties getRawProperties();
+}
